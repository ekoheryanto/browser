        <!--android:layout_height="wrap_content"-->
        <!--adS:adSize="BANNER"-->
        <!--adS:adUnitId="@string/banner_ad_unit_id"-->
        <!--android:layout_marginTop="550dp"-->
        <!--/>-->

</android.support.design.widget.CoordinatorLayout>
